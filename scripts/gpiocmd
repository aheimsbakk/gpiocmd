"""
Application for executing arbitrary command when GPIO buttons are pressed on Raspberry Pi.
Refactored to use gpiozero.
"""

import argparse
import logging
import os
import signal
import subprocess
import sys
import threading
import time
import yaml

# script version
__version__ = '0.11.0'

# Check for gpiozero
try:
    from gpiozero import Button
except ImportError:
    print("Error: gpiozero library not found. Please install it (sudo apt install python3-gpiozero).")
    sys.exit(1)


class JobManager:
    """
    Manages the execution, repetition, and termination of system processes.
    Replaces the global dictionary state management from the legacy script.
    """
    def __init__(self, kill_previous=False):
        self.kill_previous = kill_previous
        self.current_process = None
        self.current_thread = None
        self.is_running = False
        self._lock = threading.Lock()

    def stop_current(self):
        """Signal the running thread to stop and kill process if configured."""
        with self._lock:
            self.is_running = False

            # If we need to kill the process physically
            if self.current_process and self.kill_previous:
                try:
                    logging.debug("killing process %d and subprocesses", self.current_process.pid)
                    pgrp = os.getpgid(self.current_process.pid)
                    os.killpg(pgrp, signal.SIGTERM)
                except ProcessLookupError:
                    pass  # Process already died
                except Exception as e:
                    logging.error(f"Error killing process: {e}")

        # Wait for the thread to finish cleanly
        if self.current_thread and self.current_thread.is_alive():
            # We don't join here to avoid blocking the button callback event loop,
            # but setting is_running=False breaks the loop in run_proc
            pass

    def start_job(self, command, repeat, background):
        """Starts a new job."""
        # If not a background job, we manage the single-process slot
        if not background:
            self.stop_current()

            # Start new tracking
            with self._lock:
                self.is_running = True
                self.current_thread = threading.Thread(
                    target=self._run_proc,
                    args=(command, repeat, background),
                    daemon=True
                )
                self.current_thread.start()
        else:
            # Background jobs are fire-and-forget, managed by their own thread
            bg_thread = threading.Thread(
                target=self._run_proc,
                args=(command, repeat, background),
                daemon=True
            )
            bg_thread.start()

    def _run_proc(self, command, repeat, background):
        """The worker loop running in a thread."""
        while True:
            # Check if we should stop (only relevant for non-background jobs)
            if not background and not self.is_running:
                break

            bgstr = " in background" if background else ""
            logging.info('will now run%s command: %s', bgstr, command)

            try:
                # start_new_session=True is crucial for os.killpg to work later
                proc = subprocess.Popen(command, shell=True, start_new_session=True)

                if not background:
                    with self._lock:
                        self.current_process = proc
            except Exception as e:
                logging.error(f"Failed to run command: {e}")
                break

            if repeat == 0:
                break

            # Sleep handling with ability to interrupt
            sleep_for = repeat
            while sleep_for > 0:
                if not background and not self.is_running:
                    break
                time.sleep(0.05)
                sleep_for -= 0.05


class ButtonHandler:
    """
    Wraps a gpiozero Button and handles the logic for timing and command selection.
    """
    def __init__(self, pin, config, job_manager):
        self.pin = pin
        self.config = config
        self.job_manager = job_manager

        # Initialize gpiozero Button
        # pull_up=True matches the legacy GPIO.PUD_UP
        # bounce_time=0.075 matches legacy 75ms
        self.btn = Button(pin, pull_up=True, bounce_time=0.075)

        # Event hooks
        self.btn.when_pressed = self.on_press
        self.btn.when_released = self.on_release

        self._press_start_ns = 0

    def on_press(self):
        """Record the timestamp when button is pressed."""
        self._press_start_ns = time.time_ns()
        logging.debug("channel %d pressed", self.pin)

    def on_release(self):
        """Calculate duration and trigger command."""
        rising_time_ns = time.time_ns()

        # Calculate duration in milliseconds
        fall_time_ms = (rising_time_ns - self._press_start_ns) // 10**6
        logging.info("Channel %d was pressed for %d ms", self.pin, fall_time_ms)

        # Duration in seconds (integer)
        time_pressed = fall_time_ms // 1000

        # Sort commands by pressed_for time (descending) to find longest match
        commands = sorted(self.config.get('commands', []),
                          key=lambda c: c.get('pressed_for', 0),
                          reverse=True)

        for cmd in commands:
            # Check if button was pressed long enough for this command
            if cmd.get('pressed_for', 0) <= time_pressed:
                logging.debug('button match for %d seconds', time_pressed)

                self.job_manager.start_job(
                    command=cmd['run'],
                    repeat=cmd.get('repeat_every', 0),
                    background=cmd.get('background', False)
                )
                break


def setup_logging(verbosity, log_format):
    """Configure logging module."""
    verbosity = min(verbosity, 3)
    loglevel = logging.ERROR - (verbosity * 10)
    logging.basicConfig(level=loglevel, format=log_format)


def log_exception(error_msg, exception, level=logging.ERROR):
    """Log an exception and exit program."""
    logging.log(level, error_msg, str(exception))
    logging.debug('', exc_info=True)
    try:
        sys.exit(exception.errno)
    except AttributeError:
        sys.exit(1)


if __name__ == "__main__":
    DESCRIPTION = """
Run arbitrary commands when GPIO buttons are pressed on Raspberry Pi. Buttons
can differentiate multiple actions by how many seconds one button is pressed.
Actions can be configured to repeat at an interval defined in seconds.
Refactored to use gpiozero.
"""
    EPILOG = """
Example YAML configuration:
---
17:
  commands:
    - run: echo button 1 pressed
    - run: echo button 1 pressed for 1 second
      pressed_for: 1
    - run: echo button 1 pressed for 2 seconds
      pressed_for: 2
      repeat_every: 1
"""

    parser = argparse.ArgumentParser(description=DESCRIPTION, epilog=EPILOG,
        formatter_class=lambda prog:
        argparse.RawDescriptionHelpFormatter(prog, max_help_position=40, width=80))

    parser.add_argument('-V', '--version', action='version', version="%(prog)s " + __version__)
    parser.add_argument('-v', '--verbose', dest='verbosity', action='count',
        help='verbosity level increased with each to WARN, INFO and DEBUG', default=0)
    parser.add_argument('--log-format', metavar='FORMAT', dest='log_format', type=str,
        help='customize log format',
        default='%(filename)s: %(levelname)s: %(message)s')
    parser.add_argument('-k', '--kill-running', dest='kill', action='store_true',
        help='kill running command before running new command', default=False)

    required = parser.add_argument_group('required arguments')
    required.add_argument('-c', '--config', metavar='FILE', dest='config_file',
        required=True, type=argparse.FileType('r'), help='YAML configuration file')

    args = parser.parse_args()
    setup_logging(args.verbosity, args.log_format)

    # Load Config
    try:
        config_data = yaml.safe_load(args.config_file.read())
        logging.debug("configuration read: %s", str(config_data))
    except yaml.YAMLError as err:
        log_exception("loading config file: %s", err)

    if not config_data:
        logging.error("Configuration file is empty")
        sys.exit(1)

    # Initialize Job Manager
    job_manager = JobManager(kill_previous=args.kill)

    # Initialize Buttons
    # We store button handlers in a list to keep them in memory
    active_buttons = []

    try:
        logging.info("Initializing GPIO buttons...")

        for pin_num, pin_config in config_data.items():
            if not isinstance(pin_num, int):
                logging.warning(f"Skipping invalid pin number: {pin_num}")
                continue

            try:
                handler = ButtonHandler(pin_num, pin_config, job_manager)
                active_buttons.append(handler)
                logging.info(f"Registered button on GPIO {pin_num}")
            except Exception as e:
                log_exception(f"Failed to setup GPIO {pin_num}: %s", e)

        if not active_buttons:
            logging.error("No valid buttons configured. Exiting.")
            sys.exit(1)

        logging.info("System ready. Waiting for input...")

        # signal.pause() is the efficient way to keep the script alive
        # while waiting for gpiozero events
        signal.pause()

    except KeyboardInterrupt:
        logging.info("Keyboard interrupt received. Exiting.")
    finally:
        # gpiozero handles GPIO cleanup automatically on exit
        pass

